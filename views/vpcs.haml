%span{:id => "#top"}
%nav{"aria-label" => "You are here:", :role => "navigation"}
  %ul.breadcrumbs
    %li
      %span.badge= @vpcs.count
      VPCs
      %span.badge.warning= Subnet.all.count
      Subnets
      %span.badge.secondary= Instance.all.count
      Instances

%p
  %ul.menu
    - @vpcs.each do |vpc|
      %li
        %a{:href => "/vpcs/#{vpc.vid}"}
          %b= vpc.name

.row.small-up-1.medium-up-2.large-up-3
  - @vpcs.each do |vpc|
    .column
      .callout
        %h5
          %a{:href => "/vpcs/#{vpc.vid}"}= vpc.name
          %small
            %a{"data-open" => "json-#{vpc.vid}"} resource.json
          .reveal{:id => "json-#{vpc.vid}", "data-reveal" => ""}
            %button.close-button{"aria-label" => "Close modal", "data-close" => "", :type => "button"}
              %span{"aria-hidden" => "true"} Ã—
            %pre= JSON.pretty_generate(JSON.load(vpc.resource_json))
        %p
          %span.label
            = vpc.vid
          %span.label
            = vpc.state
          %span.label.warning
            = vpc.subnets.count
            Subnets
          %span.label.secondary
            = vpc.instances.count
            Instances
        %p
          = vpc.cidr_block


